<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">


    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxWidth="480dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:textAppearance="@style/OnboardingMessageStyle"
        tools:text="Live wallpapers should be set using the Android wallpaper settings." />

    <Button
        android:id="@+id/openPickerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="480dp"
        tools:text="Open Android wallpaper picker" />

    <CheckBox
        android:id="@+id/dontShowAgainCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="480dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        tools:text="Don't show again" />

    <Button
        android:id="@+id/openSettingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="480dp"
        tools:text="Open live wallpaper settings" />

</LinearLayout>